@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@model OHD.Models.ViewModels.RequestViewModel

<section class="content-header">
    @if (ViewBag.msg != null)
    {
        if (ViewBag.msg == "Done")
        {
            <div class="callout callout-success">
                <h4>Successful</h4>
            </div>
        }
        else
        {
            <div class="callout callout-danger">
                <h4>Failed</h4>
            </div>
        }
    }
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit Request Status</h1>
            </div>
            <div class="col-md-12">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="dashboard" asp-action="index">Home</a></li>
                    <li class="breadcrumb-item active">Edit Request Status</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            @if (ViewBag.msg != null)
            {
                if (ViewBag.msg == "Done")
                {
                    <div class="callout callout-success">
                        <h4>Successful</h4>
                    </div>
                }
                else
                {
                    <div class="callout callout-danger">
                        <h4>Failed</h4>
                    </div>
                }
            }
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Edit Request</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form asp-controller="implementer" asp-action="edit" method="post">
                    <div class="card-body">
                        <input type="hidden" name="id" asp-for="Request.Id" />                        
                        <div class="form-group">
                                <label>Status</label>
                                <select class="form-control" asp-for="Request.Status" asp-items="@Model.Statuses">
                                </select>
                        </div>                       
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Save</button>                       
                    </div>
                </form>
            </div>
            <!-- /.card -->

        </div>
        <!--/.col (left) -->
        <!-- right column -->
        <!--/.col (right) -->
    </div>
</div>

